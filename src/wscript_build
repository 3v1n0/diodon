import Options

prog = bld.new_task_gen (
  features = 'c cprogram',
  target = 'diodon',
  vapi_dirs = '../vapi',
  uselib = 'GTK GEE APPINDICATOR XML GCONF X11',
  cflags = ['-include', 'config.h'],
  packages = 'gtk+-2.0 gee-1.0 appindicator-0.1 libxml-2.0 gconf-2.0 x11 config',
  source = bld.path.ant_glob (incl='**/*.vala'))

if Options.options.debug:
  prog.env = bld.env_of_name ('debug').copy ()
